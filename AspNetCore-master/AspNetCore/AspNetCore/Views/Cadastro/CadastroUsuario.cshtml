@model AspNetCore_3_0.Models.UsuarioModel
@{
    ViewBag.Title = "Cadastro Clientes";
}




<h2>Cadastro de Usuários</h2>

<h2>Novo Cadastro de Usuários</h2>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Lista de Usuários</h5>
                </div>
                <div class="ibox-content">

                    @using (Html.BeginForm("CadastroUsuario", "Cadastro"))
                    {
                    <div class="row">
                        <div class="col-lg-6">
                            @Html.LabelFor(obj => obj.nome)
                            @Html.TextBoxFor(obj => obj.nome, new { @class = "form-control" })
                        </div>
                        <div class="col-lg-6">
                            @Html.LabelFor(obj => obj.email)
                            @Html.TextBoxFor(obj => obj.email, new { @class = "form-control" })
                        </div>

                        <div class="col-lg-3">
                            @Html.LabelFor(obj => obj.dataNascimento)
                            @Html.TextBoxFor(obj => obj.dataNascimento, new { @class = "form-control", @Type = "date" })
                        </div>


                    </div>



                        <div class="row">
                            <div class="col-lg-4">
                                @Html.LabelFor(obj => obj.cpf)
                                @Html.TextBoxFor(obj => obj.cpf, new { @class = "form-control" })
                            </div>
                            <div class="col-lg-8">
                                @Html.LabelFor(obj => obj.endereco)
                                @Html.TextBoxFor(obj => obj.endereco, new { @class = "form-control" })
                            </div>
                        </div>



                        <div>
                            <input type="submit" value="Salvar" class="btn btn-warning" />

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>